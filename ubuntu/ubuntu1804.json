{
  "_comment": "Build with `packer build ubuntu1804.json`",
  "variables": {
    "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
    "cleanup_pause": "",
    "cpus": "1",
    "custom_script": ".",
    "desktop": "false",
    "disk_size": "10000",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "install_dev_packages": "false",
    "iso_checksum": "cf03db08fab3f48c5a40ad23afa6ca0c6c969d1f",
    "iso_checksum_type": "sha1",
    "iso_name": "ubuntu-18.04.1-live-server-amd64.iso",
    "iso_url": "http://releases.ubuntu.com/18.04/ubuntu-18.04.1-live-server-amd64.iso",
    "memory": "1024",
    "preseed" : "preseed.cfg",
    "hostname": "ubuntu",
    "ssh_fullname": "ubuntu",
    "ssh_password": "ubuntu",
    "ssh_username": "ubuntu",
    "update": "true",
    "version": "0.1.0",
    "vm_name": "ubuntu1804",
    "domain": "",
    "country": "BE",
    "keyboard": "us",
    "language": "en",
    "locale": "en_US.UTF-8"
  },

  "builders": [
    {
      "output_directory": "output_image",
      "vm_name": "{{ user `vm_name` }}",
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "disk_size": "{{ user `disk_size` }}",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "install initrd=/install/initrd.gz ",
        "auto=true ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "language={{user `language`}} ",
        "country={{user `country`}} ",
        "locale={{user `locale`}} ",
        "hostname={{user `vm_name`}} ",
        "domain={{user `domain`}} ",
        "interface=auto ",
        "console-setup/ask_detect=false ",
        "keyboard-configuration/layoutcode={{user `keyboard`}} ",
        "vga=788 noprompt quiet --<enter>"
      ],
      "headless": "true",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_urls": [
        "{{ user `iso_url` }}"
      ],
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "60m",
      "qemuargs": [
        [ "-m", "{{ user `memory` }}" ],
        [ "-smp", "cpus={{ user `cpus`}}"]
      ]
    }
  ],

  "provisioners": [
    {
      "environment_vars": [
        "UPDATE={{user `update`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/sshd.sh",
        "scripts/packages.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ]
}
